{
  "manifest_version": 3,
  "name": "Facebook Group Scanner",
  "version": "6.0.3",
  "description": "Scrape les posts des groupes Facebook via Apify",
  "permissions": [
    "activeTab",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://api.apify.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
